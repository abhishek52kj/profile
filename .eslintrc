{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended" 
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "rules": {
    // Potential Errors
    "no-console": "warn", 
    "no-cond-assign": "error", 
    "no-debugger": "warn",

    // Best Practices
    "eqeqeq": ["error", "always"],  
    "curly": "error",  
    "complexity": ["warn", 10],

    // React-Focused Best Practices  
    "react/prop-types": "off", 
    "react/jsx-uses-react": "error", 
    "react/jsx-uses-vars": "error" 
  }
}